<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e74c3c" >


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@drawable/sape"
        android:layout_marginBottom="10dp" />



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Tambah Kegiatan"
        android:id="@+id/btn_insert"
        android:background="@drawable/round"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="List Kegiatan"
        android:id="@+id/btn_list"
        android:background="@drawable/round"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/btnUbahTampan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Password"
            android:letterSpacing="0.0025"
            android:textColor="#fff"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="15dp"
            android:background="#c0392b"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_above="@id/btnUbahTampan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nama - Devisi"
            android:textColor="#ecf0f1"
            android:id="@+id/nama"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>

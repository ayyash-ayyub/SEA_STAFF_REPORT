<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/natural"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:background="#fff">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/natural">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:background="@drawable/seamolec"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Staff"
                android:textSize="20dp"
                android:textColor="@color/weekcolor"
                android:letterSpacing="0.025"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff IT Content"
                android:letterSpacing="0.025"
                android:textSize="14dp"
                android:textColor="@color/agendacolor"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 Oktober 2016"
            android:textSize="20dp"
            android:letterSpacing="0.025"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:letterSpacing="0.025"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <Button
            android:text="Absen Masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMasuk"
            android:layout_weight="1"
             />

        <Button
            android:text="Absen Pulang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPulang"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>
